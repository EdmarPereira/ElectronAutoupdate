{
  "name": "electron_autoupdate",
  "version": "1.0.4",
  "description": "Just a test for auto update",
  "main": "src/core/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist-win": "electron-builder -w",
    "dist-mac": "electron-builder -m",
    "postinstall": "electron-builder install-app-deps",
    "release": "build -p always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EdmarPereira/updater.git"
  },
  "author": "Edmar",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^3.0.9",
    "electron-builder": "^20.36.2"
  },
  "build": {
    "appId": "com.applyhead.edmar",
    "productName": "electron_autoupdate",
    "copyright": "Copyright Â© 2019 Edmar Pereira",
    "mac": {
      "category": "public.app-category.developer-tools",
      "type": "distribution",
      "target":"pkg",
      "icon": "assets/ico.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "publish": [
      "github"
    ]
  },
  "dependencies": {
    "electron-updater": "^4.0.4"
  }
}
